<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.daycare.daycareparent.model.MealDataResponse.InvolvedMealFoodItem"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/foodItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/food_item"
            android:text="@{model.foodTypeName}"
            android:textColor="@color/colorTextLight"
            android:textSize="@dimen/text_size_14"
            android:gravity="center"
            android:layout_margin="@dimen/space_8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/amount"
            />
        <TextView
            android:id="@+id/amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/foodItem"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="Amount"
            android:text="@{model.amount}"
            android:textColor="@color/colorTextLight"
            android:textSize="@dimen/text_size_14"
            android:layout_margin="@dimen/space_8"
            app:layout_constraintEnd_toStartOf="@id/units"
            android:gravity="center"
            />
        <TextView
            android:id="@id/units"
            android:layout_width="0dp"
            android:text="@{model.measureUnitTypeName}"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/amount"
            android:hint="unit"
            android:gravity="center"
            android:textColor="@color/colorTextLight"
            android:textSize="@dimen/text_size_14"
            android:layout_margin="@dimen/space_8"
            />

    </android.support.constraint.ConstraintLayout>
</layout>